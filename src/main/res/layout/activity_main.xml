<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.android.scorekeeper.MainActivity"
    tools:ignore="ExtraText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Left Team"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scoreLeftTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed-light"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="58sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="goal"
                android:textColor="#fff"
                android:background="@drawable/ghost_button"
                android:width="150dp"
                android:textSize="16sp"
                android:letterSpacing=".4"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginBottom="15dp"
                android:onClick="submitScoreLeft"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="faul"
                android:textColor="#fff"
                android:background="@drawable/ghost_button"
                android:width="150dp"
                android:textSize="16sp"
                android:letterSpacing=".4"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="subtractScoreLeft"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Right Team"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scoreRightTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed-light"
                android:text="0"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="#ffffff"
                android:textSize="58sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="goal"
                android:textColor="#fff"
                android:background="@drawable/ghost_button"
                android:width="150dp"
                android:textSize="16sp"
                android:letterSpacing=".4"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginBottom="15dp"
                android:onClick="submitScoreRight"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="faul"
                android:textColor="#fff"
                android:background="@drawable/ghost_button"
                android:width="150dp"
                android:textSize="16sp"
                android:letterSpacing=".4"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="subtractScoreRight"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_button"
        android:fontFamily="sans-serif-smallcaps"
        android:letterSpacing=".4"
        android:text="Reset"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:onClick="resetButton">

    </Button>

</RelativeLayout>